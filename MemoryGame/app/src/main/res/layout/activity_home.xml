<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@drawable/bg_main">

    <!--<include-->
        <!--layout="@layout/app_bar_home"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

    <!--<android.support.design.widget.NavigationView-->
        <!--android:id="@+id/nav_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="start"-->
        <!--android:fitsSystemWindows="true"-->
        <!--app:headerLayout="@layout/nav_header_home"-->
        <!--app:menu="@menu/activity_home_drawer" />-->

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.cs442.bkyada.memorygame.Home" >

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout1"
            android:layout_below="@+id/ib_help"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp">

                <ImageButton
                    android:id="@+id/ib_animals"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/animals"
                    android:background="@android:color/transparent"
                    android:onClick="selectDifficultyDialog" />

                <TextView
                    android:id="@+id/txt_animals"
                    android:text="@string/animals"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp">

                <ImageButton
                    android:id="@+id/ib_birds"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/birds"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:onClick="selectDifficultyDialog" />

                <TextView
                    android:id="@+id/txt_birds"
                    android:text="@string/birds"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout2"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp">

                <ImageButton
                    android:id="@+id/ib_food"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/food"
                    android:background="@android:color/transparent"
                    android:onClick="selectDifficultyDialog" />

                <TextView
                    android:id="@+id/txt_food"
                    android:text="@string/food"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp">

                <ImageButton
                    android:id="@+id/ib_cartoon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cartoon"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:onClick="selectDifficultyDialog" />

                <TextView
                    android:id="@+id/txt_cartoon"
                    android:text="@string/cartoon"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp">

                <ImageButton
                    android:id="@+id/ib_logos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logos"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:onClick="selectDifficultyDialog" />

                <TextView
                    android:id="@+id/txt_logos"
                    android:text="@string/logos"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp">

                <ImageButton
                    android:id="@+id/ib_christmas"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/christmas"
                    android:background="@android:color/transparent"
                    android:onClick="selectDifficultyDialog" />

                <TextView
                    android:id="@+id/txt_christmas"
                    android:text="@string/christmas"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_help"
            android:src="@drawable/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:onClick="showHelp"/>

        <ImageButton
            android:id="@+id/ib_topscores"
            android:src="@drawable/topscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ib_help"
            android:layout_toStartOf="@+id/ib_help"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="showTopScores"/>

        <ImageButton
            android:id="@+id/ib_scores"
            android:src="@drawable/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ib_topscores"
            android:layout_toStartOf="@+id/ib_topscores"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="showMyScore"/>

        <ImageButton
            android:id="@+id/ib_settings"
            android:src="@drawable/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ib_scores"
            android:layout_toStartOf="@+id/ib_scores"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="showSettingsDialog"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
